<div class="title"><h3><strong>Create Your Car!</strong></h3></div>
<fieldset>
  <form method="POST" action="/cars">
    <div class="form-group col-md-3">
      <input name="make" class="form-control" placeholder="Make"/>
    </div>
    <div class="form-group col-md-3">
      <input name="model"  class="form-control" placeholder="Model"/>
    </div>
    <div class="form-group col-md-3">
      <input name="color"  class="form-control" placeholder="Color"/>
    </div>
    <div class="form-group col-md-3">
      <input name="year"  class="form-control" placeholder="Year"/>
    </div>
      <div class="form-group col-md-3">
        <input class="btn btn-primary col-md-12" type="submit" value="Submit">
      </div>
  </form>
</fieldset>
